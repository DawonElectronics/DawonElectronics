<syncfusion:RibbonWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:viewmodel="clr-namespace:DAWON_UV_INVENTORY_PROTO.ViewModels"
    xmlns:sfSkinManager="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:listCollection="clr-namespace:System.Collections;assembly=mscorlib" 
    x:Class="DAWON_UV_INVENTORY_PROTO.MainWindow"
    xmlns:local ="clr-namespace:DAWON_UV_INVENTORY_PROTO"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    sfSkinManager:SfSkinManager.Theme="{syncfusion:SkinManagerExtension ThemeName=Office2016White}"
    d:DataContext="{d:DesignInstance viewmodel:MainWindowViewModel}"
    mc:Ignorable="d"
        Title="다원전자 입출고 관리" Height="900" Width="1600">
    
    <syncfusion:RibbonWindow.Resources>
        <Style TargetType="syncfusion:GridRowHeaderCell">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="syncfusion:GridRowHeaderCell">
                        <Border x:Name="PART_RowHeaderCellBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="{Binding RowIndex,RelativeSource={RelativeSource TemplatedParent}}"
                                   TextAlignment="Center" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="syncfusion:GridHeaderCellControl" x:Key="HeaderStyle">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

       
        <viewmodel:GridWipColorConverter x:Key="ColorConverter"/>
        <viewmodel:IsSampleConverter x:Key="SampleConverter"/>


    </syncfusion:RibbonWindow.Resources>
    <syncfusion:RibbonWindow.HeaderItemsSource>
            <listCollection:ArrayList>
            <ComboBox x:Name="CmbUserlist" ItemsSource="{Binding Users}" SelectedIndex="0" FontWeight="Bold"  SelectedValue="{Binding SelectedUser, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>


            <!--<syncfusion:ButtonAdv x:Name="headerItem" Height="25" Margin="25,0,0,0" Label="Sign-In" SizeMode="Normal"  />-->
            </listCollection:ArrayList>
        </syncfusion:RibbonWindow.HeaderItemsSource>

    <!--<syncfusion:RibbonWindow.DataContext>
        <viewmodel:MainWindowViewModel/>
    </syncfusion:RibbonWindow.DataContext>-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        <syncfusion:Ribbon HorizontalAlignment="Center"  VerticalAlignment="Top" Grid.Row="0" Grid.ColumnSpan="2"  EnableSimplifiedLayoutMode="True" RibbonState="Normal" >
            <syncfusion:Ribbon.ApplicationMenu>
                <syncfusion:ApplicationMenu IsPopupOpen="False"/>
            </syncfusion:Ribbon.ApplicationMenu>
            <syncfusion:Ribbon.QuickAccessToolBar>
                <syncfusion:QuickAccessToolBar/>
            </syncfusion:Ribbon.QuickAccessToolBar>
           

            <syncfusion:RibbonTab Caption="수기입력">
                <Grid Margin="10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="AUTO"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <syncfusion:SfTextInputLayout Hint="샘플" ContainerType="Outlined"  VerticalAlignment="Center" HintFloatMode="AlwaysFloat" HelperText="샘플" Margin="5,5" Width="60" >
                            <CheckBox x:Name="chkbox_issample" IsChecked="{Binding SelectedIsSampleWo, Converter={StaticResource SampleConverter}}"  HorizontalAlignment="Center" Margin="5,5"/>
                        </syncfusion:SfTextInputLayout>

                        <syncfusion:SfTextInputLayout Hint="고객사" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5" HelperText="고객사 선택" Width="120"  >
                            <ComboBox x:Name="cmb_input_cust" Margin="5,5" SelectedValue="{Binding SelectedCustomerWo}" DisplayMemberPath="CustName" SelectedValuePath="CustName" ItemsSource="{Binding Customer}"/>
                        </syncfusion:SfTextInputLayout>

                        <syncfusion:SfTextInputLayout Hint="LOT" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5" HelperText="LOT입력" Width="250"  >
                            <TextBox x:Name="tbox_lotid" Width="240" FontSize="12" FontWeight="Bold" Foreground="Black" Margin="5,5" />
                        </syncfusion:SfTextInputLayout>

                        <syncfusion:SfTextInputLayout Hint="수량" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5" HelperText="PNL" Width="50"  >
                            <TextBox x:Name="tbox_pnlqty" Width="60" FontSize="12" FontWeight="Bold" Foreground="Black" Margin="5,5" />
                        </syncfusion:SfTextInputLayout>

                        <syncfusion:SfTextInputLayout Hint="고객사 TOOL" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5" HelperText="TOOL NO 입력" Width="180"  >
                        <syncfusion:SfTextBoxExt HorizontalAlignment="Center" Name="sftbox_product_id" 
                                     Width="150" Margin="5,5" VerticalAlignment="Center"
                                     SearchItemPath="CustToolno"
                                     AutoCompleteMode="Suggest"
                                     AutoCompleteSource="{Binding ToolInfos}"
                                     SuggestionMode="Contains"
                                     Text="{Binding Toolno2Pid,Mode=OneWayToSource,UpdateSourceTrigger=PropertyChanged}" FontSize="12" FontWeight="Bold" Foreground="Black">
                            <syncfusion:SfTextBoxExt.AutoCompleteItemTemplate>
                                <DataTemplate>
                                    <Grid HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                            Grid.Column="0"
                            Padding="2,8,0,8"
                            VerticalAlignment="Center"
                            FontFamily="SegoeUI"
                            FontSize="11"
                            FontWeight="Normal"
                            Text="{Binding CustToolno}" />
                                        <TextBlock
                            Grid.Column="1"
                            Padding="10,8,0,8"
                            VerticalAlignment="Center"
                            FontFamily="SegoeUI"
                            FontSize="11"
                            FontWeight="Normal"
                            Text="{Binding MesPrcName}" />
                                    </Grid>
                                </DataTemplate>
                            </syncfusion:SfTextBoxExt.AutoCompleteItemTemplate>

                        </syncfusion:SfTextBoxExt>
                        </syncfusion:SfTextInputLayout>

                        <syncfusion:SfTextInputLayout VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5" HelperText="제품 관리 번호" Width="130" FontSize="12" FontWeight="Bold" Foreground="Black" >
                            <TextBlock x:Name="tblk_productid" Width="150" Margin="5,5" Text="{Binding Toolno2Pid,Mode=OneWay,UpdateSourceTrigger=PropertyChanged }"  VerticalAlignment="Center"/>
                        </syncfusion:SfTextInputLayout>
                        <syncfusion:SfTextInputLayout Hint="특이사항" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5" HelperText="특이사항 입력" Width="500"  >
                            <TextBox x:Name="tbox_lot_notes" Width="630" Margin="5,5"  TextWrapping="Wrap" FontSize="12" FontWeight="Bold" Foreground="Black" AcceptsReturn="True" />
                        </syncfusion:SfTextInputLayout>
                        <TextBlock x:Name="tblk_grid_id" FontSize="1" Foreground="White"/>

                        <Button x:Name="btn_input_proceed" Content="입고" FontWeight="Bold" HorizontalAlignment="Left" FontSize="18" Width="80" Height="50" Margin="15,3" VerticalAlignment="Top" Click="btn_input_proceed_Click" />
                        <Button x:Name="BtnToolInfoInput" Content="모델등록" FontWeight="Bold" IsEnabled="False" HorizontalAlignment="Left" FontSize="18" Width="80" Height="50" Margin="5,3" VerticalAlignment="Top" Click="BtnToolInfoInput_OnClick" />
                        <!--<Button x:Name="btn_input_proceed_reuse" FontWeight="Bold" HorizontalAlignment="Left" FontSize="14" Width="120" Height="45" Margin="15,3"  >
                            <TextBlock Text="입고입력         (기존정보이용)" TextWrapping="Wrap" TextAlignment="Center"/>

                        </Button>-->
                        <!--<Button x:Name="btn_modify_proceed" Content="수정" FontWeight="Bold" HorizontalAlignment="Left" FontSize="14" Width="120" Height="45" Margin="15,3" />-->
                    </StackPanel>
                </Grid>
            </syncfusion:RibbonTab>

            <syncfusion:RibbonTab Caption="입출고">
                <syncfusion:RibbonBar Header="입출고" FontWeight="Bold">
                    <Button x:Name="BtnRibWiplist" Content="보유 재공 현황" MinWidth="150" Margin="5,5" FontSize="16" FontWeight="Bold" Click="btn_rib_wiplist_Click"/>
                    <Button x:Name="BtnRibWipHistory" Content="입출고 이력 조회" MinWidth="150" Margin="5,5" FontSize="16" FontWeight="Bold" Click="btn_rib_wip_history_Click"/>

                </syncfusion:RibbonBar>
                <syncfusion:RibbonBar Header="기준 정보 관리" FontWeight="Bold">
                    <Button x:Name="BtnRibModelRegistAuto" Content="모델 정보 입력(자동)" MinWidth="150" Margin="5,5" FontSize="16" FontWeight="Bold" Click="btn_rib_model_regist_auto_Click"/>
                    <Button x:Name="BtnRibModelRegistManual" Content="모델 정보 입력(수동)" MinWidth="150" Margin="5,5" FontSize="16" FontWeight="Bold" Click="btn_rib_model_regist_manual_Click"/>
                    <Button x:Name="BtnRibModelQuery" Content="모델 정보 조회" MinWidth="150" Margin="5,5" FontSize="16" FontWeight="Bold" Click="btn_rib_model_query_Click"/>
                    <Button x:Name="BtnRibCustomerManage" Content="고객사 관리" MinWidth="150" Margin="5,5" FontSize="16" FontWeight="Bold" Click="btn_rib_customer_manage_Click"/>
                    <Button x:Name="BtnRibUserManage" Content="사용자 관리" MinWidth="150" Margin="5,5" FontSize="16" FontWeight="Bold" Click="btn_rib_user_manage_Click"/>
                    <Button x:Name="BtnRibMachineManage" Content="설비 관리" MinWidth="150" Margin="5,5" FontSize="16" FontWeight="Bold" Click="btn_rib_machine_manage_Click"/>

                </syncfusion:RibbonBar>
            </syncfusion:RibbonTab>

        </syncfusion:Ribbon>
        
        
        <syncfusion:TabControlExt x:Name="TabControl" HorizontalAlignment="Stretch" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Stretch" Margin="10,10">
            <syncfusion:TabItemExt x:Name="TabWip" Header="보유재공현황">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Row="0"  VerticalAlignment="Top">
                        <UniformGrid Margin="5,0" VerticalAlignment="Top" Columns="4">
                        <Button x:Name="BtnWipDEMS"  Content="대덕MS" Margin="2,2" Height="35" Padding="5,5" FontWeight="Bold" Click="BtnWipDEMS_OnClick"/>
                        <Button x:Name="BtnWipDEPKG"  Content="대덕PKG" Margin="2,2" Height="35" Padding="5,5" FontWeight="Bold" Click="BtnWipDEPKG_OnClick"/>
                        <Button x:Name="BtnWipYPE"  Content="영풍전자" Margin="2,2" Height="35" Padding="5,5" FontWeight="Bold" Click="BtnWipYPE_OnClick"/>
                        <Button x:Name="BtnWipBH"  Content="BH" Margin="2,2" Height="35" Padding="5,5" FontWeight="Bold" Click="BtnWipBH_OnClick"/>
                        <Button x:Name="BtnWipIFC"  Content="인터" Margin="2,2" Height="35" Padding="5,5" FontWeight="Bold" Click="BtnWipIFC_OnClick"/>
                        <Button x:Name="BtnWipSEMCO"  Content="삼성전기" Margin="2,2" Height="35" Padding="5,5" FontWeight="Bold" Click="BtnWipSEMCO_OnClick"/>
                        <Button x:Name="BtnWipNFT"  Content="뉴프렉스" Margin="2,2" Height="35" Padding="5,5" FontWeight="Bold" Click="BtnWipNFT_OnClick"/>
                            <Button x:Name="BtnWipSI"  Content="SI" Margin="2,2" Height="35" Padding="5,5" FontWeight="Bold" Click="BtnWipSI_OnClick"/>

                        </UniformGrid>
                        <syncfusion:SfTextInputLayout Hint="고객사" VerticalAlignment="Center" HorizontalAlignment="Center" HelperTextVisibility="Collapsed" Margin="10,10" Width="120"  >
                            <ComboBox x:Name="CmbWipCust" Margin="0,0"   
                                      ItemsSource="{Binding Customer}" 
                                      DisplayMemberPath="CustName" 
                                      SelectedValuePath="CustName" 
                                      SelectedValue="{Binding SelectedCustomerWo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                      SelectedIndex="1"
                                      SelectionChanged="cmb_wip_cust_SelectionChanged"  HorizontalContentAlignment="Center"  />
                        </syncfusion:SfTextInputLayout>
                        <syncfusion:SfTextInputLayout Hint="오더유형" VerticalAlignment="Center" HorizontalAlignment="Center" HelperTextVisibility="Collapsed"  Margin="10,10" Width="80"  >
                            <ComboBox x:Name="CmbWipOrdertype" Margin="0,0" 
                                      SelectedValuePath="Content" 
                                      SelectedValue="{Binding SelectedIsSampleWo, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                      SelectedIndex="0"
                                      SelectionChanged="cmb_wip_ordertype_SelectionChanged"  HorizontalContentAlignment="Center" >
                                <ComboBoxItem Content="양산"/>
                                <ComboBoxItem Content="샘플"/>
                            </ComboBox>
                        </syncfusion:SfTextInputLayout>
                       
                        
                            <!--<Button x:Name="BtnPrintChecksheet" Content="체크시트 출력" Margin="10,10" Height="45" Padding="5,5"  FontSize="16" FontWeight="Bold" />-->

                        <Button x:Name="BtnInputLot" Content="인수등록" Margin="10,10"  Padding="15,10" FontSize="20" FontWeight="Bold"  Click="BtnInputLot_OnClick "/>
                        <syncfusion:SfTextInputLayout Hint="LOT검색" VerticalAlignment="Center" HorizontalAlignment="Center" HelperTextVisibility="Collapsed" Margin="50,10,10,10" Width="150"  >
                            <TextBox x:Name="tblksearchlot" HorizontalContentAlignment="Center" FontWeight="Bold" PreviewKeyDown="Tblksearchlot_OnPreviewKeyDown"  />
                        </syncfusion:SfTextInputLayout>
                        <!--<Button x:Name="ButtonWipSrchLot" Content="검색" Margin="5,10"  Padding="15,10" Height="45" FontSize="16" FontWeight="Bold"  Click="ButtonWipSrchLot_OnClick"/>-->
                            <Button x:Name="ButtonWipSrchClear" Content="검색초기화" Margin="5,10"  Padding="15,10" Height="45" FontSize="16" FontWeight="Bold"  Click="ButtonWipSrchClear_OnClick"/>
                        <!--<syncfusion:SfTextInputLayout Hint="선택된 TOOL" VerticalAlignment="Center" HorizontalAlignment="Center" HelperTextVisibility="Collapsed" Margin="10,10" Width="150"  >
                            <TextBox  Text="{Binding SelectedGridWip.CustToolno,UpdateSourceTrigger=PropertyChanged,Mode=OneWay}" HorizontalContentAlignment="Center" FontWeight="Bold" MouseDoubleClick="tbox_wip_selected_tool_MouseDoubleClick" />
                        </syncfusion:SfTextInputLayout>-->
                        <Button x:Name="BtnGridWipXls"  Click="btn_grid_wip_xls_Click" Margin="20,10" Width="42" Height="42">                            
                            <Image Source="/Icon/Excel-icon.png" />                           
                        </Button>
                            
                        <!--<Button x:Name="btn_complete_job" Content="작업완료" Margin="3,3" Width="80" Height="33" FontSize="16" FontWeight="Bold"/>-->
                            <TextBlock x:Name="TblkCurrentCustomer" Text="{Binding SelectedCustomerWo}" Margin="10,10" FontSize="26" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="White" Background="Black"/>
                            <TextBlock x:Name="TblkCurrentOrderType" Text="{Binding SelectedIsSampleWo}" Margin="0,10" FontSize="26" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Black"/>
                        <syncfusion:ColorPickerPalette  GenerateThemeVariants="True"
                                                        GenerateStandardVariants="True" RecentlyUsedPanelVisibility="Visible" NoColorVisibility="Visible" Width="50" Height="30"/>
                    </StackPanel>
                    
                     <!--MaxHeight="1080" MaxWidth="2560"--> 
                    <syncfusion:SfDataGrid x:Name="GridWip" Grid.Row="1" Margin="3,3"
                                       HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AllowResizingColumns="True" 
                                       ColumnSizer="SizeToCells"
                                       SelectionMode="Extended"
                                       SelectionUnit="Cell"
                                       HorizontalContentAlignment="Center"
                                       VerticalContentAlignment="Center"
                                       ShowRowHeader="True"
                                       CurrentCellBeginEdit="grid_wip_CurrentCellBeginEdit"
                                       CurrentCellEndEdit="grid_wip_CurrentCellEndEdit"
                                       AutoGenerateColumns="False"
                                       ItemsSource="{Binding WorkOrderList, UpdateSourceTrigger=PropertyChanged}"
                                       RowHeight="30"
                                       ShowGroupDropArea="True" 
                                       AllowGrouping="True"
                                       AutoExpandGroups="True"
                                       FrozenColumnCount="6"
                                       AllowDraggingColumns="True"
                                       RowSelectionBrush="LightCyan"
                                       ScrollMode="None"
                                       SelectedItem="{Binding SelectedGridWip,Mode=TwoWay}"
                                       HeaderStyle="{StaticResource HeaderStyle}"
                                       CanMaintainScrollPosition="True"
                                       >
                        <syncfusion:SfDataGrid.SortColumnDescriptions>
                            <syncfusion:SortColumnDescription ColumnName="TrackinTime" SortDirection="Ascending" />
                            
                        </syncfusion:SfDataGrid.SortColumnDescriptions>
                        <!--QueryRowHeight="dataGrid_QueryRowHeight"-->
                        <syncfusion:SfDataGrid.Resources>
                            <ResourceDictionary>
                                <Style x:Key="TboxAcceptEnter" TargetType="TextBox">
                                    <Setter Property="AcceptsReturn" Value="True"/>
                                </Style>
                                <Style TargetType="syncfusion:GridCell">
                                    <Setter Property="Background" Value="{Binding Converter={StaticResource ColorConverter}}"/>
                                </Style>
                            </ResourceDictionary>
                        </syncfusion:SfDataGrid.Resources>

                        <syncfusion:SfDataGrid.RecordContextMenu>
                            <ContextMenu >
                                <MenuItem Command="{Binding Source={x:Static Member=viewmodel:GridWipContextMenuCommands.CancelTrackinRecordCommand}}"
                                          CommandParameter="{Binding }"
                                          Header="인수취소">
                                </MenuItem>
                                <MenuItem Command="{Binding Source={x:Static Member=viewmodel:GridWipContextMenuCommands.ExecuteWaitTrackoutCommand}}"
                                          CommandParameter="{Binding }"
                                          Header="출고대기">
                                </MenuItem>
                                <MenuItem Command="{Binding Source={x:Static Member=viewmodel:GridWipContextMenuCommands.CancelWaitTrackoutCommand}}"
                                          CommandParameter="{Binding }"
                                          Header="출고대기 취소">
                                </MenuItem>
                                <MenuItem Command="{Binding Source={x:Static Member=viewmodel:GridWipContextMenuCommands.ExecuteCamFinishCommand}}"
                                          CommandParameter="{Binding }"
                                          Header="초도 캠 작업 완료">
                                </MenuItem>

                                <MenuItem Command="{Binding Source={x:Static Member=viewmodel:GridWipContextMenuCommands.AssignMachineCsCommand}}"
                                          CommandParameter="{Binding }"
                                          Header="설비지정">
                                </MenuItem>
                                <MenuItem Command="{Binding Source={x:Static Member=viewmodel:GridWipContextMenuCommands.CopyCCLInfoCommand}}"
                                          CommandParameter="{Binding }"
                                          Header="PKG CCL 복사">
                                </MenuItem>
                            </ContextMenu>
                        </syncfusion:SfDataGrid.RecordContextMenu>

                        <syncfusion:SfDataGrid.Columns>

                            <syncfusion:GridTemplateColumn MappingName="ExecuteTrackout" HeaderText="출고처리" Width="70" >
                                
                                <syncfusion:GridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button syncfusion:FocusManagerHelper.FocusedElement="True"  
                                            Command="{Binding Path=DataContext.TrackoutRecord, ElementName=GridWip}"
                            CommandParameter="{Binding}"
                            Content="출고" FontWeight="Bold" Margin="0,0" BorderThickness="1" BorderBrush="CornflowerBlue"  />
                                    </DataTemplate>
                                </syncfusion:GridTemplateColumn.CellTemplate>

                            </syncfusion:GridTemplateColumn>
                            <syncfusion:GridDateTimeColumn  CustomPattern="yyyy/MM/dd hh:mm"
                                    HeaderText="생성일"
                                    MappingName="CreateTime"
                                    Pattern="ShortDate"
                                    TextAlignment="Center" MinimumWidth="80"/>

                            <syncfusion:GridTextColumn MappingName="Lotid" HeaderText="LOT" Width="120" TextAlignment="Center" AllowFiltering="True"/>
                            <syncfusion:GridTextColumn MappingName="CustModelname" HeaderText="모델명" Width="170" TextAlignment="Center"/>
                            <syncfusion:GridTextColumn MappingName="CustRevision" HeaderText="REV" Width="60" TextAlignment="Center"/>
                            <syncfusion:GridTextColumn MappingName="CustToolno" HeaderText="TOOL" Width="110" TextAlignment="Center"/>
<!--<syncfusion:GridTextColumn MappingName="CustName" HeaderText="고객사" Width="90" TextAlignment="Center"/>-->
                            <syncfusion:GridTextColumn MappingName="MesPrcName" HeaderText="공정명" Width="80" TextAlignment="Center"/>
                            <syncfusion:GridTextColumn MappingName="PrcName" HeaderText="공법" Width="80" TextAlignment="Center"/>
                            <syncfusion:GridTextColumn MappingName="Pnlqty" HeaderText="수량" Width="50" TextAlignment="Center"/>
                            <syncfusion:GridDateTimeColumn MappingName="TrackinTime" HeaderText="입고시간" Width="80" TextAlignment="Center" CustomPattern="MM/dd HH:mm" Pattern="CustomPattern"/>
                            <syncfusion:GridTextColumn MappingName="TrackinUsername" HeaderText="입고자" Width="70" TextAlignment="Center"/>
                            <syncfusion:GridTextColumn  
                                    HeaderText="특이사항"
                                    MappingName="LotNotes"
                                    AllowEditing="True"                                    
                                    TextAlignment="Center"
                                    MinimumWidth="200"
                                MaximumWidth="400"                                
                                TextWrapping="Wrap"
                                Padding="5,5"
                                    >
                              
                            </syncfusion:GridTextColumn>

