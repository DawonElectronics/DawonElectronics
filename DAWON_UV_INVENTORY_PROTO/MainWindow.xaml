<syncfusion:RibbonWindow
    x:Class="DAWON_UV_INVENTORY_PROTO.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:listCollection="clr-namespace:System.Collections;assembly=mscorlib"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:sfSkinManager="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:viewmodel="clr-namespace:DAWON_UV_INVENTORY_PROTO.ViewModels"
    x:Name="rbwindow"
    Title="다원전자 입출고 관리"
    Width="1600"
    Height="900"
    d:DataContext="{d:DesignInstance viewmodel:MainWindowViewModel}"
    sfSkinManager:SfSkinManager.Theme="{syncfusion:SkinManagerExtension ThemeName=Office2016White}"
    Office2010Icon="logo.png"
    mc:Ignorable="d">

    <syncfusion:RibbonWindow.Resources>
        <Style TargetType="syncfusion:GridRowHeaderCell">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="syncfusion:GridRowHeaderCell">
                        <Border
                            x:Name="PART_RowHeaderCellBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding RowIndex, RelativeSource={RelativeSource TemplatedParent}}"
                                    TextAlignment="Center" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderStyle" TargetType="syncfusion:GridHeaderCellControl">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="Black" />
        </Style>


        <viewmodel:GridWipColorConverter x:Key="ColorConverter" />
        <viewmodel:GridWipDoneColorConverter x:Key="DoneColorConverter" />
        <viewmodel:IsSampleConverter x:Key="SampleConverter" />
        <viewmodel:GridWipBoldConverter x:Key="BoldConverter" />
        <viewmodel:GridWipDoneBoldConverter x:Key="DoneBoldConverter" />
        <viewmodel:GridWipFGConverter x:Key="FgConverter" />
        <viewmodel:GridWipDoneFGConverter x:Key="DoneFgConverter" />
        <viewmodel:MachineSelectionConverter x:Key="MachineConverter" />

        <DataTemplate x:Key="trackoutTemplate">
            <Button
                Margin="0,0"
                syncfusion:FocusManagerHelper.FocusedElement="True"
                BorderBrush="CornflowerBlue"
                BorderThickness="1"
                Command="{Binding Path=DataContext.TrackoutRecord, ElementName=GridWip}"
                CommandParameter="{Binding}"
                Content="출고"
                FontWeight="Bold" />
        </DataTemplate>

        <DataTemplate x:Key="CsComboTemplate">
            <syncfusion:ComboBoxAdv
                x:Name="cmbMachineCS"
                HorizontalContentAlignment="Center"
                syncfusion:FocusManagerHelper.FocusedElement="True"
                AllowMultiSelect="True"
                DropDownClosed="cmbMachineCS_DropDownClosed"
                FontSize="12"
                FontWeight="Bold"
                IsEditable="True"
                ItemsSource="{Binding DataContext.MachineList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type syncfusion:RibbonWindow}}, FallbackValue={x:Null}, TargetNullValue={x:Null}}"
                SelectedItems="{Binding MachineCs, Mode=TwoWay, Converter={StaticResource MachineConverter}}"
                SelectedValueDelimiter="," />
        </DataTemplate>

        <DataTemplate x:Key="SsComboTemplate">
            <syncfusion:ComboBoxAdv
                x:Name="cmbMachineSS"
                HorizontalContentAlignment="Center"
                syncfusion:FocusManagerHelper.FocusedElement="True"
                AllowMultiSelect="True"
                DropDownClosed="cmbMachineSS_DropDownClosed"
                FontSize="12"
                FontWeight="Bold"
                IsEditable="True"
                ItemsSource="{Binding DataContext.MachineList, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type syncfusion:RibbonWindow}}, FallbackValue={x:Null}, TargetNullValue={x:Null}}"
                SelectedItems="{Binding MachineSs, Mode=TwoWay, Converter={StaticResource MachineConverter}}"
                SelectedValueDelimiter="," />
        </DataTemplate>

        <!--<viewmodel:MainWindowViewModel x:Key="viewModel" />-->

    </syncfusion:RibbonWindow.Resources>

    <syncfusion:RibbonWindow.HeaderItemsSource>
        <listCollection:ArrayList>
            <ComboBox
                x:Name="CmbUserlist"
                FontWeight="Bold"
                ItemsSource="{Binding Users}"
                SelectedIndex="0"
                SelectedValue="{Binding SelectedUser, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <CheckBox
                x:Name="chktest"
                Margin="4,4"
                IsChecked="{Binding ChkTest, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </listCollection:ArrayList>
    </syncfusion:RibbonWindow.HeaderItemsSource>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="1" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <syncfusion:Ribbon
            Grid.Row="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            EnableSimplifiedLayoutMode="True"
            RibbonState="Normal">
            <syncfusion:Ribbon.ApplicationMenu>
                <syncfusion:ApplicationMenu IsPopupOpen="False" />
            </syncfusion:Ribbon.ApplicationMenu>
            <syncfusion:Ribbon.QuickAccessToolBar>
                <syncfusion:QuickAccessToolBar />
            </syncfusion:Ribbon.QuickAccessToolBar>

            <syncfusion:RibbonTab Caption="수기입력">
                <Grid Margin="10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="AUTO" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="80" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <syncfusion:SfTextInputLayout
                            Width="60"
                            Margin="5,5"
                            VerticalAlignment="Center"
                            ContainerType="Outlined"
                            HelperText="샘플"
                            HelperTextVisibility="Collapsed"
                            Hint="샘플"
                            HintFloatMode="AlwaysFloat">
                            <CheckBox
                                x:Name="chkbox_issample"
                                Margin="5,5"
                                HorizontalAlignment="Center"
                                IsChecked="{Binding SelectedIsSampleWo, Mode=OneWay, Converter={StaticResource SampleConverter}}" />
                        </syncfusion:SfTextInputLayout>

                        <syncfusion:SfTextInputLayout
                            Width="120"
                            Margin="5,5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            HelperText="고객사 선택"
                            HelperTextVisibility="Collapsed"
                            Hint="고객사">
                            <ComboBox
                                x:Name="cmb_input_cust"
                                Margin="5,5"
                                DisplayMemberPath="CustName"
                                ItemsSource="{Binding Customer}"
                                SelectedValue="{Binding SelectedCustomerWo, Mode=OneWay}"
                                SelectedValuePath="CustName" />
                        </syncfusion:SfTextInputLayout>

                        <syncfusion:SfTextInputLayout
                            Width="250"
                            Margin="5,5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            HelperText="LOT입력"
                            HelperTextVisibility="Collapsed"
                            Hint="LOT">
                            <TextBox
                                x:Name="tbox_lotid"
                                Width="240"
                                Margin="5,5"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="Black" />
                        </syncfusion:SfTextInputLayout>

                        <syncfusion:SfTextInputLayout
                            Width="60"
                            Margin="5,5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            HelperText="PNL"
                            HelperTextVisibility="Collapsed"
                            Hint="수량">
                            <TextBox
                                x:Name="tbox_pnlqty"
                                Width="60"
                                Margin="5,5"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="Black" />
                        </syncfusion:SfTextInputLayout>

                        <syncfusion:SfTextInputLayout
                            Width="180"
                            Margin="5,5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            HelperText="TOOL NO 입력"
                            HelperTextVisibility="Collapsed"
                            Hint="고객사 TOOL">
                            <syncfusion:SfTextBoxExt
                                Name="sftbox_product_id"
                                Width="150"
                                Margin="5,5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                AutoCompleteMode="Suggest"
                                AutoCompleteSource="{Binding ToolInfos}"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="Black"
                                SearchItemPath="CustToolno"
                                SuggestionMode="Contains"
                                Text="{Binding Toolno2Pid, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}">
                                <syncfusion:SfTextBoxExt.AutoCompleteItemTemplate>
                                    <DataTemplate>
                                        <Grid HorizontalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Padding="2,8,0,8"
                                                VerticalAlignment="Center"
                                                FontFamily="SegoeUI"
                                                FontSize="11"
                                                FontWeight="Normal"
                                                Text="{Binding CustToolno}" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Padding="10,8,0,8"
                                                VerticalAlignment="Center"
                                                FontFamily="SegoeUI"
                                                FontSize="11"
                                                FontWeight="Normal"
                                                Text="{Binding MesPrcName}" />
                                        </Grid>
                                    </DataTemplate>
                                </syncfusion:SfTextBoxExt.AutoCompleteItemTemplate>

                            </syncfusion:SfTextBoxExt>
                        </syncfusion:SfTextInputLayout>

                        <syncfusion:SfTextInputLayout
                            Width="130"
                            Margin="5,5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="Bold"
                            Foreground="Black"
                            HelperText="제품 관리 번호"
                            HelperTextVisibility="Collapsed">
                            <TextBlock
                                x:Name="tblk_productid"
                                Width="150"
                                Margin="5,5"
                                VerticalAlignment="Center"
                                Text="{Binding Toolno2Pid, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                        </syncfusion:SfTextInputLayout>
                        <syncfusion:SfTextInputLayout
                            Width="430"
                            Margin="5,5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            HelperText="특이사항 입력"
                            HelperTextVisibility="Collapsed"
                            Hint="특이사항">
                            <TextBox
                                x:Name="tbox_lot_notes"
                                Width="400"
                                Margin="5,5"
                                AcceptsReturn="True"
                                FontSize="12"
                                FontWeight="Bold"
                                Foreground="Black"
                                TextWrapping="Wrap" />
                        </syncfusion:SfTextInputLayout>
                        <TextBlock
                            x:Name="tblk_grid_id"
                            FontSize="1"
                            Foreground="White" />

                        <Button
                            x:Name="btn_input_proceed"
                            Width="80"
                            Height="45"
                            Margin="15,3"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Click="btn_input_proceed_Click"
                            Content="입고"
                            FontSize="18"
                            FontWeight="Bold" />
                        <Button
                            x:Name="BtnToolInfoInput"
                            Width="80"
                            Height="45"
                            Margin="5,3"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Click="BtnToolInfoInput_OnClick"
                            Content="모델등록"
                            FontSize="18"
                            FontWeight="Bold"
                            IsEnabled="True" />

                    </StackPanel>
                </Grid>
            </syncfusion:RibbonTab>

            <syncfusion:RibbonTab Caption="입출고">
                <syncfusion:RibbonBar FontWeight="Bold" Header="입출고">
                    <Button
                        x:Name="BtnRibWiplist"
                        MinWidth="150"
                        Margin="5,5"
                        Click="btn_rib_wiplist_Click"
                        Content="보유 재공 현황"
                        FontSize="16"
                        FontWeight="Bold" />
                    <Button
                        x:Name="BtnRibWipHistory"
                        MinWidth="150"
                        Margin="5,5"
                        Click="btn_rib_wip_history_Click"
                        Content="입출고 이력 조회"
                        FontSize="16"
                        FontWeight="Bold" />

                </syncfusion:RibbonBar>
                <syncfusion:RibbonBar FontWeight="Bold" Header="기준 정보 관리">
                    <Button
                        x:Name="BtnRibModelRegistAuto"
                        MinWidth="150"
                        Margin="5,5"
                        Click="btn_rib_model_regist_auto_Click"
                        Content="모델 정보 입력(자동)"
                        FontSize="16"
                        FontWeight="Bold" />
                    <Button
                        x:Name="BtnRibModelRegistManual"
                        MinWidth="150"
                        Margin="5,5"
                        Click="btn_rib_model_regist_manual_Click"
                        Content="모델 정보 입력(수동)"
                        FontSize="16"
                        FontWeight="Bold" />
                    <Button
                        x:Name="BtnRibModelQuery"
                        MinWidth="150"
                        Margin="5,5"
                        Click="btn_rib_model_query_Click"
                        Content="모델 정보 조회"
                        FontSize="16"
                        FontWeight="Bold" />
                    <Button
                        x:Name="BtnRibCustomerManage"
                        MinWidth="150"
                        Margin="5,5"
                        Click="btn_rib_customer_manage_Click"
                        Content="고객사 관리"
                        FontSize="16"
                        FontWeight="Bold" />
                    <Button
                        x:Name="BtnRibUserManage"
                        MinWidth="150"
                        Margin="5,5"
                        Click="btn_rib_user_manage_Click"
                        Content="사용자 관리"
                        FontSize="16"
                        FontWeight="Bold" />
                    <Button
                        x:Name="BtnRibMachineManage"
                        MinWidth="150"
                        Margin="5,5"
                        Click="btn_rib_machine_manage_Click"
                        Content="설비 관리"
                        FontSize="16"
                        FontWeight="Bold" />

                </syncfusion:RibbonBar>
            </syncfusion:RibbonTab>

        </syncfusion:Ribbon>


        <syncfusion:TabControlExt
            x:Name="TabControl"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="10,10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <syncfusion:TabItemExt x:Name="TabWip" Header="보유재공현황">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="0"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">
                        <UniformGrid
                            Margin="5,0"
                            VerticalAlignment="Top"
                            Columns="4">

                            <Button
                                x:Name="BtnWipDEMS"
                                Height="35"
                                Margin="2,2"
                                Padding="5,5"
                                Click="BtnWipDEMS_OnClick"
                                Content="{Binding WipCount_Dems}"
                                FontWeight="Bold" />
                            <Button
                                x:Name="BtnWipDEPKG"
                                Height="35"
                                Margin="2,2"
                                Padding="5,5"
                                Click="BtnWipDEPKG_OnClick"
                                Content="{Binding WipCount_Depkg}"
                                FontWeight="Bold" />
                            <Button
                                x:Name="BtnWipYPE"
                                Height="35"
                                Margin="2,2"
                                Padding="5,5"
                                Click="BtnWipYPE_OnClick"
                                Content="{Binding WipCount_Yp}"
                                FontWeight="Bold" />
                            <Button
                                x:Name="BtnWipBH"
                                Height="35"
                                Margin="2,2"
                                Padding="5,5"
                                Click="BtnWipBH_OnClick"
                                Content="{Binding WipCount_Bh}"
                                FontWeight="Bold" />
                            <Button
                                x:Name="BtnWipIFC"
                                Height="35"
                                Margin="2,2"
                                Padding="5,5"
                                Click="BtnWipIFC_OnClick"
                                Content="{Binding WipCount_Ifx}"
                                FontWeight="Bold" />
                            <Button
                                x:Name="BtnWipSEMCO"
                                Height="35"
                                Margin="2,2"
                                Padding="5,5"
                                Click="BtnWipSEMCO_OnClick"
                                Content="{Binding WipCount_Semco}"
                                FontWeight="Bold" />
                            <Button
                                x:Name="BtnWipNFT"
                                Height="35"
                                Margin="2,2"
                                Padding="5,5"
                                Click="BtnWipNFT_OnClick"
                                Content="{Binding WipCount_Nft}"
                                FontWeight="Bold" />
                            <Button
                                x:Name="BtnWipSI"
                                Height="35"
                                Margin="2,2"
                                Padding="5,5"
                                Click="BtnWipSI_OnClick"
                                Content="{Binding WipCount_Si}"
                                FontWeight="Bold" />

                        </UniformGrid>
                        <syncfusion:SfTextInputLayout
                            Width="120"
                            Margin="10,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            HelperTextVisibility="Collapsed"
                            Hint="고객사">
                            <ComboBox
                                x:Name="CmbWipCust"
                                Margin="0,0"
                                HorizontalContentAlignment="Center"
                                DisplayMemberPath="CustName"
                                ItemsSource="{Binding Customer}"
                                SelectedValue="{Binding SelectedCustomerWo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValuePath="CustName" />
                        </syncfusion:SfTextInputLayout>
                        <syncfusion:SfTextInputLayout
                            Width="80"
                            Margin="10,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            HelperTextVisibility="Collapsed"
                            Hint="오더유형">
                            <ComboBox
                                x:Name="CmbWipOrdertype"
                                Margin="0,0"
                                HorizontalContentAlignment="Center"
                                SelectedValue="{Binding SelectedIsSampleWo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        </syncfusion:SfTextInputLayout>




                        <Button
                            x:Name="BtnInputLot"
                            Margin="5,10"
                            Padding="5,5"
                            Width="90"
                            Height="45"
                            Click="BtnInputLot_OnClick "
                            Content="인수등록"
                            FontSize="16"
                            FontWeight="Bold" />
                        
                        <syncfusion:SfTextInputLayout
                            Width="150"
                            Margin="30,10,10,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            HelperTextVisibility="Collapsed"
                            Hint="LOT검색">
                            <TextBox
                                x:Name="tblksearchlot"
                                HorizontalContentAlignment="Center"
                                FontWeight="Bold"
                                PreviewKeyDown="Tblksearchlot_OnPreviewKeyDown" />
                        </syncfusion:SfTextInputLayout>

                        <Button
                            x:Name="ButtonWipSrchClear"
                            Height="45"
                            Margin="5,10"
                            Padding="10,10"
                            Click="ButtonWipSrchClear_OnClick"
                            Content="초기화"
                            FontSize="16"
                            FontWeight="Bold" />

                        <Button
                            x:Name="BtnGridWipXls"
                            Width="42"
                            Height="42"
                            Margin="20,10"
                            Click="btn_grid_wip_xls_Click">
                            <Image Source="/Icon/Excel-icon.png" />
                        </Button>

                        <TextBlock
                            x:Name="TblkCurrentCustomer"
                            Margin="10,10"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="Black"
                            FontSize="26"
                            Foreground="White"
                            Text="{Binding SelectedCustomerWo, Mode=OneWay}" />
                        <TextBlock
                            x:Name="TblkCurrentOrderType"
                            Margin="0,10"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            FontSize="26"
                            Foreground="Black"
                            Text="{Binding SelectedIsSampleWo, Mode=OneWay}" />

                    </StackPanel>
                    <TextBlock
                        x:Name="TblkExecuteStatus"
                        Grid.Row="1"
                        Margin="25,2"
                        FontSize="13"
                        FontWeight="Bold"
                        Text="{Binding ExecuteResult}"
                        TextWrapping="Wrap">
                        <!--<TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Style.Resources>
                                    <Storyboard x:Key="flashAnimation">
                                        <DoubleAnimation
                                            AutoReverse="True"
                                            RepeatBehavior="Forever"
                                            Storyboard.TargetProperty="Opacity"
                                            From="1"
                                            To="0.5"
                                            Duration="0:0:0.5" />
                                    </Storyboard>
                                </Style.Resources>

                                <Setter Property="Visibility" Value="Hidden" />
