                                            <BeginStoryboard x:Name="flash" Storyboard="{StaticResource flashAnimation}" />
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <StopStoryboard BeginStoryboardName="flash" />
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>

                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>-->
                    </TextBlock>

                    <syncfusion:SfDataGrid
                        x:Name="GridWip"
                        Grid.Row="2"
                        Margin="3,3"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        AllowDraggingColumns="True"
                        AllowGrouping="True"
                        AllowResizingColumns="True"
                        AllowSorting="False"
                        AutoExpandGroups="True"
                        AutoGenerateColumns="False"
                        CanMaintainScrollPosition="True"
                        ColumnSizer="None"
                        CurrentCellBeginEdit="grid_wip_CurrentCellBeginEdit"
                        CurrentCellEndEdit="grid_wip_CurrentCellEndEdit"
                        FrozenColumnCount="6"
                        HeaderStyle="{StaticResource HeaderStyle}"
                        ItemsSource="{Binding WorkOrderList, Mode=OneWay}"
                        Loaded="GridWip_Loaded"
                        RowHeight="32"
                        RowSelectionBrush="DarkOliveGreen"
                        ScrollMode="None"
                        ScrollViewer.HorizontalScrollBarVisibility="Visible"
                        ScrollViewer.VerticalScrollBarVisibility="Visible"
                        SelectedItem="{Binding SelectedGridWip, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SelectionMode="Extended"
                        SelectionUnit="Cell"
                        ShowRowHeader="True"
                        VirtualizingStackPanel.IsVirtualizing="True"
                        VirtualizingStackPanel.VirtualizationMode="Recycling"
                        >

                        <syncfusion:SfDataGrid.SortColumnDescriptions>
                            <syncfusion:SortColumnDescription ColumnName="WaitTrackout" SortDirection="Descending" />
                            <syncfusion:SortColumnDescription ColumnName="TrackinTime" SortDirection="Ascending" />
                        </syncfusion:SfDataGrid.SortColumnDescriptions>

                        <syncfusion:SfDataGrid.Resources>
                            <ResourceDictionary>
                                <Style x:Key="TboxAcceptEnter" TargetType="TextBox">
                                    <Setter Property="AcceptsReturn" Value="True" />
                                </Style>
                                <Style TargetType="syncfusion:VirtualizingCellsControl">
                                    <Setter Property="Background" Value="{Binding Converter={StaticResource ColorConverter}}" />
                                    <Setter Property="FontWeight" Value="{Binding Converter={StaticResource BoldConverter}}" />
                                    <Setter Property="Foreground" Value="{Binding Converter={StaticResource FgConverter}}" />
                                </Style>

                            </ResourceDictionary>
                        </syncfusion:SfDataGrid.Resources>

                        <syncfusion:SfDataGrid.RecordContextMenu>
                            <ContextMenu>
                                <MenuItem
                                    Command="{Binding Source={x:Static Member=viewmodel:GridWipContextMenuCommands.CancelTrackinRecordCommand}}"
                                    CommandParameter="{Binding}"
                                    Header="인수취소" />
                                <MenuItem
                                    Command="{Binding Source={x:Static Member=viewmodel:GridWipContextMenuCommands.ExecuteWaitTrackoutCommand}}"
                                    CommandParameter="{Binding}"
                                    Header="출고대기" />
                                <MenuItem
                                    Command="{Binding Source={x:Static Member=viewmodel:GridWipContextMenuCommands.EditUserCommand}}"
                                    CommandParameter="{Binding}"
                                    Header="작업자 변경" />
                                <MenuItem
                                    Command="{Binding Source={x:Static Member=viewmodel:GridWipContextMenuCommands.CancelWaitTrackoutCommand}}"
                                    CommandParameter="{Binding}"
                                    Header="출고대기 취소" />
                                <MenuItem
                                    Command="{Binding Source={x:Static Member=viewmodel:GridWipContextMenuCommands.ExecuteCamFinishCommand}}"
                                    CommandParameter="{Binding}"
                                    Header="초도 캠 작업 완료" />

                                <!--<MenuItem
                                    Command="{Binding Source={x:Static Member=viewmodel:GridWipContextMenuCommands.AssignMachineCsCommand}}"
                                    CommandParameter="{Binding}"
                                    Header="설비지정" />-->
                                <MenuItem
                                    Command="{Binding Source={x:Static Member=viewmodel:GridWipContextMenuCommands.CopyCCLInfoCommand}}"
                                    CommandParameter="{Binding}"
